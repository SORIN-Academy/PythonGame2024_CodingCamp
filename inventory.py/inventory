player_inventory = Inventory()


player_inventory.add_item("key", 2)
player_inventory.add_item("coin", 10)
player_inventory.add_item("potion")


player_inventory.remove_item("coin", 5)


print(f"Keys: {player_inventory.check_item('key')}")
print(f"Coins: {player_inventory.check_item('coin')}")
print(f"Potions: {player_inventory.check_item('potion')}")

sword = Weapon('Melee', 1, 10)
